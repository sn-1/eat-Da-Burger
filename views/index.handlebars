<div class="row">
  <center>
    <!-- ready to eat -->
    <div class="col-md-6">
      <h4 class="purple_font">Ready to eat!</h4>
      <div id="ready_to_eat">

        {{#each burgers}}
          {{#unless devoured}}
          <form action="burger/eat/" method="POST">
            <div class="input-group">
              <li class="form-control"> {{burger_name}}</li>
                <span class="input-group-btn">
                  <button class="btn danger devour-button" type="submit">Devour It!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>

    <!-- already eaten -->
    <div class="col-md-6">
      <h4 class="purple_font">Already eaten!</h4>
      <div id="already_eaten">

   
        {{#each burgers}}
          {{#if this.devoured}}
            <div class="input-group">
              <li class="form-control">{{this.burger_name}}</li>
                <span class="input-group-btn">
                  <button class="btn btn-light devour-button" type="submit">Whine!</button>
                </span>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </center>
</div>